{
  "manifest_version": 2,

  "name": "Kev DNS",
  "short_name": "Kev DNS",
  "description": "Kev DNS",
  "version": "1.0.2",
  "author":"Kev Swindells <kev.swindells@conkergroup.com>",
  "icons": { "128": "img/icon-128.png", "16": "img/icon-16.png" },
   "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
	"mdns","system.network",
		"http://*/",
	"https://*/"

  ],
  
    "sockets": {
     "udp": { "bind": "*", "send": "*" }
  }

}
